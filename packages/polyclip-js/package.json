{
  "name": "polyclip-js",
  "author": "Steve Ruiz",
  "license": "MIT",
  "version": "1.0.1",
  "description": "A JavaScript port of the polyclip library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/steveruizok/polyclip-js"
  },
  "keywords": [
    "polyclip",
    "polygon",
    "clip",
    "intersection",
    "union",
    "difference",
    "xor"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "dev": "tsup ./src/index.ts --watch --dts --sourcemap --format esm,cjs",
    "build": "tsup ./src/index.ts --tsconfig ./tsconfig.build.json --dts --sourcemap --format esm,cjs",
    "test": "jest"
  },
  "devDependencies": {
    "@swc/core": "^1.3.24",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.2.5",
    "jest": "^29.3.1",
    "tsup": "^6.5.0"
  }
}

{
	"compilerOptions": {
		"target": "es6",
		"composite": false,
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"lib": ["es2015", "esnext"],
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"removeComments": true,
		"noFallthroughCasesInSwitch": true,
		"typeRoots": ["node_modules/@types"],
		"types": ["node", "@types/jest"]
	},
	"files": ["src/index.ts"],
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
